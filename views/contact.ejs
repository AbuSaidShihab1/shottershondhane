<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- header css -->
    <link rel="stylesheet" href="./css/home.css" />
    <link rel="stylesheet" href="./css/contact.css" />
    <!-- icon link -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <title>Shotter Shondhane-Login</title>
    <style>
      .activelink {
        background-color: #f39c12;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="login">
      <!-- header -->
      <%-include("./partials/header")%>
      <div class="contact-main" id="contact">
        <div class="about-shoptext">
          <h1>Contact Us</h1>
        </div>
        <div class="form-main">
          <div class="formbox cform1">
            <form action="">
              <input type="text" placeholder="Enter Your Name" required /><br />
              <input
                type="email"
                placeholder="Enter Your Email"
                required
              /><br />
              <textarea
                name="message"
                id="message"
                cols="30"
                rows="10"
                placeholder="Message"
                required
              ></textarea
              ><br />
              <button>Send</button>
            </form>
          </div>
          <div class="formbox cform2">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3747017.150972875!2d87.702913793261!3d23.489433058278042!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30adaaed80e18ba7%3A0xf2d28e0c4e1fc6b!2sBangladesh!5e0!3m2!1sen!2sbd!4v1697784628575!5m2!1sen!2sbd"
              width="100%"
              height="400"
              style="border: 0"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </div>
      <!-- footer -->
      <%-include("./partials/footer.ejs")%>
      <!-- footer -->
    </div>

    <script>
      let currlink = window.location.pathname.split("/").pop();
      let linkactive = document.querySelectorAll("ul li a").forEach((e) => {
        if (e.href.includes(currlink)) {
          e.classList.add("activelink");
        }
      });
      let password = document.getElementById("password");
      let username = document.getElementById("username");
      let formtext = document.getElementById("formtext");
      function fomsubmit() {
        if (username.value == "" || password.value == "") {
          formtext.innerHTML = "Please,fill the form correctly !";
          return false;
        } else if (password.value.length < 6) {
          formtext.innerHTML = "Password should be greater than 5 character";
          return false;
        } else if (password.value.length > 12) {
          formtext.innerHTML = "Password should be less than 12 character";
          return false;
        }
      }
    </script>
  </body>
</html>
